<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_safet_selecter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="Activity.Safet_inspect_Activity2">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="30dp"
       >
       <TextView
           android:layout_marginRight="20dp"
           android:layout_width="0dp"
           android:layout_height="70dp"
           android:layout_weight="1"
           android:text="安全出口"
           android:textSize="40sp"
           android:textColor="@color/black"
           android:gravity="center"
           android:background="@drawable/yuanjiao_bg"
           android:id="@+id/anquanchukou2"/>
       <TextView
           android:layout_marginRight="20dp"
           android:layout_width="0dp"
           android:layout_height="70dp"
           android:layout_weight="1"
           android:text="疏散指示灯"
           android:textSize="40sp"
           android:textColor="@color/black"
           android:gravity="center"
           android:background="@drawable/yuanjiao_bg"
           android:id="@+id/shusanzhishideng2"/>
       <TextView
           android:layout_marginRight="20dp"
           android:layout_width="0dp"
           android:layout_height="70dp"
           android:layout_weight="1"
           android:text="消火栓"
           android:textSize="40sp"
           android:textColor="@color/black"
           android:gravity="center"
           android:background="@drawable/yuanjiao_bg"
           android:id="@+id/xiaohuoshuan2"/>
   </LinearLayout>
    <LinearLayout
       android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginRight="20dp"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="防火卷帘门"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/yuanjiao_bg"
            android:id="@+id/juanlianmen2"/>

        <TextView
            android:layout_marginRight="20dp"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="空气采样器"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/yuanjiao_bg"
            android:id="@+id/kongqicaiji2"/>
        <TextView
            android:layout_marginRight="20dp"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="灭火器"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/yuanjiao_bg"
            android:id="@+id/miehuoqi2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >


        <TextView
            android:gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="安全设备"
             android:textSize="28dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/sq_shebei_name2"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:background="@drawable/yuanjiao_bg"
            android:textColor="@color/black"/>

        <TextView
            android:gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="原因"
            android:textSize="28dp"
            android:textColor="@color/black"/>

        <Spinner
            android:id="@+id/sq_spinner2"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            />

        <TextView
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="备注"
            android:textSize="28dp"
            android:textColor="@color/black"/>

        <EditText
            android:imeOptions="flagNoExtractUi"
            android:id="@+id/sq_beizhu2"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:background="@drawable/yuanjiao_bg"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/sq_btn_wanhao2"
            android:background="@drawable/button_red"
            android:gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_width="150dp"
            android:layout_marginRight="50dp"
            android:layout_height="70dp"
            android:text="完好"
            android:textSize="23dp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/sq_btn_wenti2"
            android:layout_marginLeft="50dp"
            android:background="@drawable/button_red"
            android:gravity="center_horizontal"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:textSize="23dp"
            android:text="提交问题"
            android:textColor="@color/black"/>
        <Button
            android:layout_marginLeft="50dp"
            android:background="@drawable/button_red"
            android:gravity="center_horizontal"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:textSize="23dp"
            android:text="拍照"
            android:textColor="@color/black"
            android:id="@+id/paizhao2"/>

        <Button
            android:layout_marginLeft="50dp"
            android:background="@drawable/button_red"
            android:gravity="center_horizontal"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:textSize="23dp"
            android:text="上传"
            android:textColor="@color/black"
            android:id="@+id/shangchuan2"/>
    </LinearLayout>

</LinearLayout>
