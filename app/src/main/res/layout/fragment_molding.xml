<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@drawable/application_bg_welcome"
             >

    <LinearLayout
       android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:layout_marginRight="10dp">

    <TextView
        android:textSize="20dp"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:text="日期"
        android:textColor="@color/white"
        />

    <TextView
        android:gravity="center"
        android:textColor="@color/black"
        android:id="@+id/md_riqi"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:paddingRight="10dp"
        android:textSize="20dp"
        />
    <TextView
        android:textSize="20dp"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:text="班次"
        android:textColor="@color/white"
        android:paddingLeft="10dp"/>

    <TextView
        android:gravity="center"
        android:textColor="@color/black"
        android:id="@+id/md_banci"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:textSize="20dp"/>
</LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
       >

        <TextView
            android:textSize="20dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="班组"
            android:textColor="@color/white"
            />

        <TextView
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:id="@+id/md_banzu"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:paddingRight="10dp"/>
        <TextView
            android:textSize="20dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="机台"
            android:textColor="@color/white"
            android:paddingLeft="10dp"/>

        <TextView
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:id="@+id/md_jitai"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
       android:layout_marginTop="10dp">

        <TextView
            android:textSize="20dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="时间"
            android:textColor="@color/white"
            />

        <TextView
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:id="@+id/md_scsj"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:paddingRight="10dp"/>
        <TextView
            android:textSize="20dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="施工"
            android:textColor="@color/white"
            android:paddingLeft="10dp"/>

        <TextView
          android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:id="@+id/md_shigong"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/white"/>
    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp">

    <TextView
        android:textSize="20dp"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:text="验证"
        android:textColor="@color/white"
        />

    <TextView
        android:textSize="20dp"
        android:gravity="center"
        android:id="@+id/md_yz"
        android:textColor="@color/black"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:paddingRight="10dp"/>
    <TextView
        android:textSize="20dp"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:text="主手"
        android:textColor="@color/white"
        android:paddingLeft="10dp"/>

    <TextView
        android:textSize="20dp"
        android:gravity="center"
        android:id="@+id/md_chengxing"
        android:textColor="@color/black"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="@color/white"/>
</LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp">

    <TextView
        android:textSize="20dp"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:text="生产规格"
        android:textColor="@color/white"
        />

    <TextView
        android:textSize="20dp"
        android:gravity="center"
        android:id="@+id/md_chengxing2"
        android:textColor="@color/black"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:paddingRight="10dp"/>
        <TextView
            android:textSize="20dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            />

        <TextView
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:paddingRight="10dp"/>

</LinearLayout>

    <Button
        android:layout_marginTop="120dp"
        android:id="@+id/btn_contrast"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="半成品对质"/>
</LinearLayout>
