<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_inquire"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".Activity.Inquire2Activity">

    <RadioGroup
        android:id="@+id/rg_inquire2"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <RadioButton

            android:id="@+id/gum2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/bcqa_bg_selecter"
            android:text="检  查"
            android:textColor="@color/white"
            android:textSize="30dp"/>

        <RadioButton
            android:id="@+id/vulcanize2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/bcqa_bg_selecter"
            android:text="硫  化"
            android:textColor="@color/white"
            android:textSize="30dp"
            />

        <RadioButton
            android:id="@+id/molding2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/bcqa_bg_selecter"
            android:text="成  型"
            android:textColor="@color/white"
            android:textSize="30dp"

            />

        <RadioButton
            android:id="@+id/prepare2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/bcqa_bg_selecter"
            android:text="半制品"
            android:textColor="@color/white"
            android:textSize="30dp"/>

    </RadioGroup>

    <FrameLayout
        android:id="@+id/fl2_inquire"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"></FrameLayout>

</LinearLayout>
