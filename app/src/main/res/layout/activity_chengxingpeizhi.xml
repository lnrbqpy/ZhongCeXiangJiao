<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_chengxingpeizhi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="hznj.com.zhongcexiangjiao.Activity.chengxingpeizhiActivity">

    <LinearLayout
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日期"
            android:textSize="16sp"
            android:textColor="@color/white"/>
        <EditText
            android:id="@+id/cxpz_riqi"
            android:layout_marginLeft="20dp"
            android:gravity="center_horizontal"
            android:hint="日期"
            android:background="@color/white"
            android:layout_width="120dp"
            android:layout_height="30dp"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="班组"
            android:textSize="16sp"
            android:textColor="@color/white"/>

        <Spinner
            android:background="@color/white"
            android:id="@+id/cxpz_banzu"
            android:layout_marginLeft="20dp"
            android:layout_width="100dp"
            android:layout_height="30dp"/>


        <Button
            android:id="@+id/cxpz_chaxun"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="查询"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:layout_marginLeft="30dp"/>
    </LinearLayout>

    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        >
        <TextView
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:text="产品"
            android:gravity="center"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="@color/black"/>

        <TextView
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="施工表"
            android:gravity="center"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="@color/black"/>
        <TextView
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.3"
            android:text="类别"
            android:gravity="center"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="@color/black"/>
        <TextView
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="硫化机"
            android:gravity="center"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="@color/black"/>
        <TextView
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.3"
            android:text="硫化机数"
            android:gravity="center"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="@color/black"/>
        <TextView
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:text="硫化时间"
            android:gravity="center"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="@color/black"/>
        <TextView
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:text="单机日产"
            android:gravity="center"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="@color/black"/>
        <TextView
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:text="日指标"
            android:gravity="center"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="@color/black"/>
        <TextView
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:text="胚胎班需求"
            android:gravity="center"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="@color/black"/>
        <TextView
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:text="生胎库存"
            android:gravity="center"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="@color/black"/>
        <TextView
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:text="成型机数"
            android:gravity="center"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="@color/black"/>
        <TextView
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:text="成型机"
            android:gravity="center"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="@color/black"/>
        <TextView
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:text="维持时间"
            android:gravity="center"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>

    <ListView
        android:divider="@color/black"
        android:dividerHeight="1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cxpz_shuju">

    </ListView>

</LinearLayout>
