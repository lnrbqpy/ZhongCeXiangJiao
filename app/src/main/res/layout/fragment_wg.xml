                android:text="判级"/>

            <View
                android:layout_width="1dp"
                android:layout_height="35dp"
                android:background="@color/black"
                />

            <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="35dp"
                android:textColor="@color/black"
                android:layout_weight="1"
